<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout" >

    <ImageView
        android:id="@+id/fragment_mapping_slide_intro_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_mapping_slide_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/fragment_mapping_slide_intro_title"
                android:maxWidth="@dimen/mapping_slide_4_text_width"
                android:gravity="left"
                android:paddingLeft="25dp"
                android:paddingTop="50dp"
                android:textColor="#000"
                android:textSize="@dimen/mapping_slide_4_text_size" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/mapping_slide_4_button_margin"
                android:text="@string/mapping_slide_4_button"
                android:id="@+id/fragment_mapping_slide_intro_button" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>