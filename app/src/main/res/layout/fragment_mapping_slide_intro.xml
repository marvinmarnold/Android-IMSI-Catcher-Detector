<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout" >

    <ImageView
        android:id="@+id/fragment_mapping_slide_intro_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_mapping_slide_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/fragment_mapping_slide_intro_title"
            android:width="@dimen/mapping_slide_intro_text_width"
            android:gravity="left"
            android:paddingLeft="25dp"
            android:paddingTop="50dp"
            android:textColor="#000"
            android:textSize="@dimen/mapping_slide_intro_text_size" />
    </ScrollView>
</FrameLayout>